<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingApp.MainPage">

    <VerticalStackLayout>
        <Label 
            Text="Sign up"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="0,5,0,0"/>

        <Entry Grid.Row="1" Grid.Column="1" Text="{Binding CurrentProfile.Name }"/>
        <Entry Grid.Row="2" Grid.Column="1" Text="{Binding CurrentProfile.Surname }"/>
        <Entry Grid.Row="3" Grid.Column="1" Text="{Binding CurrentProfile.EmailAddress }"/>
        <Entry Grid.Row="4" Grid.Column="1" Text="{Binding CurrentProfile.Bio}"/>

        <Button Text="Save" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
